@model Ukad_task.Models.UserInput
@{
    ViewBag.Title = "Speed Test";
}
@Styles.Render("~/Content/index")
<script>
    $("#spinner").show();
    $(".container.body-content").hide();
</script>
<script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
<div class="container">
    <div id="chart"></div>
</div>
<div class="container inputs-container">
    <ul>
        <li class="input-line">
            <div class="editor-label">
                <label>Url (e.g "https://www.google.com")</label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.URL)
                @Html.ValidationMessageFor(model => model.URL)
            </div>
        </li>
        <li class="input-line">
            <div class="editor-label">
                @Html.Label("Timeout (minutes)")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Timeout)
                @Html.ValidationMessageFor(model => model.Timeout)
            </div>
        </li>
    </ul>
    <ul>
        <li class="input-line">
            <div class="editor-label">
                @Html.LabelFor(model => model.IncludeInnerSitemaps)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.IncludeInnerSitemaps)
            </div>
        </li>
        <li class="input-line">
            <button id="apply-btn">Test speed</button>
        </li>
    </ul>
</div>
<div class="container">
    <div id="table"></div>
</div>

@Scripts.Render("~/Scripts/index_script.js")